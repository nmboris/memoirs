---
export const button = {
	render: "Button",
	attributes: {},
};

const { props } = Astro;
---

<button {...props}><slot /></button>

<style>
	button {
		color: var(--color-text-invers);
		background: var(--color-primary);
		border: none;
		border-radius: 0.25rem;
		cursor: pointer;
		font-size: 1rem;
		font-weight: 700;
		padding: 0.5rem 1rem;
		transition: background 0.2s ease-in-out;
	}

	button:hover {
		background: var(--color-primary-dark);
	}

	button:active {
		background: var(--color-primary-light);
	}
</style>

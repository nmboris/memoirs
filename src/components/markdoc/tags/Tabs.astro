---
export const tabs = {
	render: "Tabs",
	attributes: {
		style: {
			type: String,
			default: "",
		},
	},
};

const { style } = Astro.props;
---

<div class="tabs" {style}>
	<slot />
</div>

<style>
	.tabs {
		--tab-width: 700px;

		display: flex;
		flex-wrap: wrap;
		max-width: var(--tab-width);
		background: #e5e5e5;
		box-shadow: 0 48px 80px -32px rgba(0, 0, 0, 0.3);

		margin-inline: auto;
	}
</style>

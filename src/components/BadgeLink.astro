import Badge from "./Badge.astro";

type Props = {
	text: string;
	href: string;
	[key: string]: any;
	multiline?: boolean;
};

const { text, href, multiline = false, ...restProps } = Astro.props;
---

<a class="badgeLink" {...restProps} href={href} type="button" target="_blank">

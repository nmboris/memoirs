---
type Props = {
	multiline?: boolean;
	info?: boolean;
	error?: boolean;
	hover?: boolean;
	[key: string]: unknown;
};

const {
	multiline = false,
	hover = false,
	info = false,
	error = false,
	...restProps
} = Astro.props || {};

const Element = multiline ? "div" : "span";
---

<Element class:list={["source", { info }, { error }, { hover }]} {...restProps}>
	<slot />
</Element>

<style>
	.source {
		cursor: default;

		color: rgba(21, 128, 61, 1);
		background-color: rgba(240, 253, 244, 1);
		border: 1px solid rgba(194, 235, 212, 1);

		font-size: var(--font-size-small);

		border-radius: var(--radius);
		padding: 0 var(--space-2);

		&.hover:hover {
			background-color: rgb(187, 237, 209);
		}
	}

	.source.info {
		color: rgba(139, 86, 26, 1);
		background-color: rgba(254, 252, 233, 1);
		border: 1px solid rgba(243, 229, 191, 1);

		&.hover:hover {
			background-color: rgba(243, 229, 191, 1);
		}
	}

	.source.error {
		color: crimson;
		background-color: rgba(254, 242, 242, 1);
		border: 1px solid rgba(251, 220, 221, 1);

		&.hover:hover {
			background-color: rgb(251, 233, 233);
		}
	}
</style>

---
const { multiline, error, ...restProps } = Astro.props || {};

const Element = multiline ? "div" : "span";
---

<Element class:list={["source", { error }]} {...restProps}><slot /></Element>

<style>
	.source {
		color: rgba(21, 128, 61, 1);
		background-color: rgba(240, 253, 244, 1);
		border: 1px solid rgba(194, 235, 212, 1);

		font-size: 0.8rem;
		margin-bottom: 1rem;
		border-radius: 6px;
		padding: 0.2rem 0.6rem;

		&:hover {
			background-color: rgb(187, 237, 209);
		}
	}

	.source.error {
		color: crimson;
		background-color: rgba(254, 242, 242, 1);
		border: 1px solid rgba(251, 220, 221, 1);

		&:hover {
			background-color: rgb(251, 233, 233);
		}
	}
</style>
